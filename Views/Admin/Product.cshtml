@model IEnumerable<ecommerce.DAL.Tbl_Product>

@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}


    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Produit
            <a href="../Admin/ProductAdd" class="btn btn-info pull-right fa fa-plus">Ajoutez</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>No.</th>
                            <th>Nom de la catégorie</th>
                            <th>Action</th>

                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>No.</th>
                            <th>Produit</th>
                            <th>Action</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            int count = 1;
                            <tr>
                                <td>@count</td>
                                <td>@item.ProductName</td>
                                <td>

                                    @Html.ActionLink("Modifier", "ProductEdit", new { productId = item.ProductId })
                                </td>

                            </tr>
                            count++;
                        }

                    </tbody>
                </table>
            </div>

        </div>
    </div>